{
  "name": "normative-react",
  "version": "0.0.1",
  "description": "A React starter theme for Normative.",
  "repository": {
    "type": "git",
    "url": "https://github.com/normative/normative-react.git"
  },
  "main": "webpack.config.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist && mkdir dist/server",
    "dev": "NODE_ENV=development babel-node ./src/server",
    "start": "node ./dist/server",
    "build": "npm run clean && npm run build-client && npm run build-server",
    "build-server": "babel -d ./dist/server ./src/server -s",
    "build-client": "NODE_ENV=production babel-node ./webpack/build.js && cp ./src/client/index.html ./dist/client/index.html",
    "heroku": "npm run build && npm start",
    "test": "mocha --compilers js:babel-register tests/unit/**.js",
    "ftest": "babel-node ./runFunctionalTests.js",
    "sinit": "selenium-standalone install",
    "lint": "eslint ./src --ext .js,.jsx"
  },
  "keywords": [
    "react",
    "normative",
    "webpack"
  ],
  "author": "Mark Gaucher",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel": "^6.3.26",
    "babel-cli": "^6.4.0",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "css-loader": "^0.23.1",
    "doiuse": "^2.2.2",
    "eslint": "^2.2.0",
    "eslint-config-airbnb": "^6.0.2",
    "eslint-plugin-classes": "^0.1.1",
    "eslint-plugin-filenames": "^0.2.0",
    "eslint-plugin-react": "^4.1.0",
    "file-loader": "^0.8.5",
    "fs-extra": "^0.26.5",
    "hapi": "^13.0.0",
    "hapi-webpack-plugin": "^1.3.0",
    "inert": "^3.2.0",
    "mocha": "^2.3.4",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.8.0",
    "postcss-reporter": "^1.3.0",
    "sass-loader": "^3.1.2",
    "selenium-standalone": "^4.8.0",
    "style-loader": "^0.13.0",
    "stylelint": "^4.0.0",
    "stylelint-config-standard": "^3.0.0",
    "url-loader": "^0.5.7",
    "webdriverio": "^3.4.0",
    "webpack": "^1.12.11",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0"
  },
  "dependencies": {
    "glue": "3.2.0",
    "hoek": "3.0.4",
    "foundation-sites": "^6.2.0",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-router": "^2.0.0-rc5"
  }
}
